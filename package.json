{
  "type": "module",
  "name": "reactful",
  "module": "experiment/index.ts",
  "scripts": {
    "debug": "bun run experiment/index.tsx",
    "start": "bun --hot run experiment/index.ts",
    "tests": "bun run test-ut; bun run test-e2e",
    "test-ut": "find . -type f -not -path './node_modules/*' -name '*.test.ts' | xargs bun test;",
    "test-e2e": "npx playwright test",
    "clear": "rm -rf node_modules package-lock.json bun.lockb; bun i; bun run build",
    "fresh": "bun update @reactful/extensions @reactful/server @reactful/web",
    "build": "rm -rf tsconfig.tsbuildinfo; bunx tsc -p tsconfig.json",
    "clear-all": "bun run clear-commons & bun run clear-extensions & bun run clear-server & bun run clear-web",
    "clear-commons": "cd commons; bun i",
    "clear-extensions": "cd extensions; bun i",
    "clear-server": "cd server; bun i",
    "clear-web": "cd web; bun i"
  },
  "dependencies": {
    "@playwright/test": "^1.41.2",
    "@reactful/extensions": "latest",
    "@reactful/server": "latest",
    "@reactful/web": "^0.1.0",
    "@types/react": "^18.2.57",
    "os": "^0.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "bun-types": "^1.0.20",
    "typescript": "^5.3.3"
  }
}