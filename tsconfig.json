{
   "exclude": ["node_modules"],   
   "include": ["experiment"],
   "compilerOptions": {
      "rootDir": ".",
      "jsx": "react",
      "target": "esnext",
      "module": "esnext",
      "types": ["bun-types"],
      "moduleDetection": "auto",
      "moduleResolution": "bundler",
      "noEmit": true,
      "strict": false,
      "allowJs": true,
      "sourceMap": true,
      "composite": true,
      "declaration": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
   }
}
