{
   "exclude": ["node_modules", "doc", "npm"],
   "compilerOptions": {
      "rootDir": "./",
      "outDir": "./npm",
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-jsx",
      "types": ["bun-types"],
      "moduleDetection": "auto",
      "moduleResolution": "bundler",
      "noEmit": true,
      "strict": false,
      "allowJs": true,
      "sourceMap": true,
      "composite": true,
      "declaration": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
   }, 
   "paths": {
      "@reactful/extensions": ["../extensions/src/index.ts"], 
      "@reactful/commons": ["../commons/src/index.ts"], 
      "@reactful/server": ["../server/src/index.ts"],
      "@reactful/web": ["../src/index.ts"]
   }
}
